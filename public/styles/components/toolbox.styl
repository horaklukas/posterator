fontSize = 22px
widgetHeight = fontSize * 1.8

widgetBase()
  size: 90% widgetHeight
  margin: 0 5% (fontSize / 4) 5%
  border-radius: 3px
  font-size: fontSize
  background-color: #FFF

.toolbox
  size: 400px 100%
  absolute: top
  border-radius: 5px
  background-color: rgba(0, 0, 0, 0.05)

  .label
    display: inline-block
    margin: 0.4em auto 0.2em 2%
    font-family: Verdana, Arial, sans-serif
    font-size: fontSize * 0.8

  .text
    widgetBase()
    border: 1px solid #aaa

  .slider
    widgetBase()
    border: 1px solid grey

    .handle
      top: 1px
      size: 50px widgetHeight - 2
      line-height: @height
      text-align: center
      background-color: black
      color: white
      cursor: pointer

      &.active
        background-color: grey
