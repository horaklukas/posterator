.toolbox
  .slider
    widgetBase()
    border: 1px solid grey

    .handle
      top: 1px
      size: 50px widgetHeight - 2
      line-height: @height
      text-align: center
      background-color: black
      color: white
      cursor: pointer

      &.active
        background-color: grey
